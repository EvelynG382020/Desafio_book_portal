<div class="modal" id="purchase_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Comprar Libro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal_body">
        <p>Modal body text goes here.</p>
      </div>
    </div>
  </div>
</div>


<br>
<div class="container">
  <h3 class="text-center">Mis Reservas</h3>
  <ul>
    <% @reservations.each do |res|%>
      <br>
      <li class="list" id="reservation_<%=res.id%>" > 
        <%= res.book.name %> |
        <%= link_to 'Purchase', new_sale_path(reservation_id: res.id), remote: true%> |
        <%= link_to 'Unreserve', reservation_path(res.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true%>
      </li>
    <%end%>
  </ul>
  <br>
  <%= link_to 'Lista de libros comprados', sales_path %>
</div>